Body
{
	Background-color:#440303;
	font:  sans-serif;
}

/*---------------------------------------titulo------------------------------------------------------------------*/
.container
{
	padding:6px;
	margin:40px 140px;
}
.caja1
{

	color:#fff;
	Text-Align:center;
	font-size:75px;
	margin:0px;	
}
/*--------------------------------------------Menu-------------------------------------------------------------*/
.Menu
{
	Background-color:#000;
	display:flex;	
}
.cajas
{
	Background-color:#fff;
	font-size: 24px;
	width: 400px;
    height: auto;
	padding:15px;
	border: 5px solid red;
}
.cajas:hover
{
	color:#fff;
	Background-color:#48e;
	padding:15px;
	border: 5px solid red;
}
/*-------------------------------------------------contenido-----------------------------------------------------*/
.contenido
{
	display: grid;
    margin-top: 150px;
    grid-template-columns: 750px 1fr;
    grid-template-rows: 300px 300px 300px;
	grid-row-gap:5px;
	/*grid-column-gap:5px;*/

}
.item
{
	background-color:#000;
	color:#FFF;
	border-radius: 25px;
}

img
{
	border-radius: 25px;
	width: 100%;
	height:100%;
}
/*------------------------------------------------Footer---------------------------------------------------------*/
.caja2
{
	Background-color:white;
	color:#00bfff;
	text-align:center;
}
